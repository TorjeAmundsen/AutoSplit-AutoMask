<Window x:Class="AutoSplit_AutoMask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="AutoMask for AutoSplit" Height="270" Width="525">
    <Grid>
        <Image Name="InputImageView" Width="240" Height="179" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10, 10, 10, 10" />
        <Image Name="OutputImageView" Width="240" Height="179" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="260, 10, 10, 10" />

        <Button Name="BtnLoadInputImage" Content="Select Input Image" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,199,0,0" Width="150" Click="BtnLoadInputImage_Click" />
        <Button Name="BtnLoadAlphaImage" Content="Select Mask" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="170,199,0,0" Width="150" Click="BtnLoadAlphaImage_Click" />
        <Button Name="BtnAutoSave" Content="Save Image" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,199,10,0" Width="120" Click="BtnAutoSave_Click" />
        <Button Name="BtnSaveAs" Content="Save Image" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,199,10,0" Width="120" Click="BtnSaveImage_Click" />

    </Grid>
</Window>
