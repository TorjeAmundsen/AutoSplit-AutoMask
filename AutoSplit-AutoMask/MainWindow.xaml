<Window x:Class="AutoSplit_AutoMask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="AutoMask for AutoSplit" Height="300" Width="525">
    <Grid>
        <TextBlock Name="OutputDirectoryLabel" Text="Output folder:" Width="80" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox Name="OutputDirectoryTextBox" Width="360" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" IsReadOnly="True" Focusable="False" Margin="90, 10, 10, 10"/>
            <Image Name="InputImageView" Width="240" Height="179" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10, 40, 10, 10"/>
        <Image Name="OutputImageView" Width="240" Height="179" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="260, 40, 10, 10" />

        <Button Name="BtnLoadInputImage" Content="Select Input Image" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,229,0,0" Width="120" Click="BtnLoadInputImage_Click" />
        <Button Name="BtnPrevAlphaImage" Content="&lt;" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="151,229,0,0" Width="20" Click="BtnNextAlphaImage_Click" />
        <Button Name="BtnLoadAlphaImage" Content="Select Mask" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="170,229,0,0" Width="80" Click="BtnLoadAlphaImage_Click" />
        <Button Name="BtnNextAlphaImage" Content="&gt;" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="249,229,0,0" Width="20" Click="BtnPrevAlphaImage_Click" />
        <Button Name="BtnAutoSave" Content="Save Image" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,229,10,0" Width="120" Click="BtnAutoSave_Click" />
        <Button Name="BtnSaveAs" Content="Save Image" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,229,10,0" Width="120" Click="BtnSaveImage_Click" />

    </Grid>
</Window>
